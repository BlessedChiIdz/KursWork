<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KursWork.Views.StartWind"
        Title="StartWind"
		Height="500"
		Width="500"
		>

		<Grid ColumnDefinitions="150,*">
			<Grid Grid.Column="0" RowDefinitions="*,*,*">
				<Button Grid.Row="0" Content="Create"/>
				<Button Grid.Row="1" Content="Open"/>
				<Button Grid.Row="2" Content="Exit"/>
			</Grid>
			<Grid Grid.Column="1" >
				<ListBox Width="350" Items="{Binding Projects}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Border CornerRadius="4">
								<TextBlock Text="{Binding Name}" TextWrapping="Wrap"/>
							</Border>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</Grid>
  
</Window>
