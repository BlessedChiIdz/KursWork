									</TransformGroup>
								</Rectangle.RenderTransform>
							</Rectangle>
						</Canvas>
					</DataTemplate>

					<DataTemplate DataType="{x:Type model:Multipleks}">
						<Canvas>
							<Image Source="C:\Users\Rik\source\repos\KursWork\KursWork\Assets\2023-05-27_22-44-12.png">
								<Image.RenderTransform>
									<TransformGroup>
										<TranslateTransform
											X="{Binding StartPoint.X}"
